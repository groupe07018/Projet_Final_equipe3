
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            color: #333;
            margin: 0;
            padding: 0;
        }
        header {
            background-color: #007BFF;
            color: white;
            padding: 10px 0;
            text-align: center;
            margin-bottom: 20px;
        }
        h1 {
            margin: 0;
            text-align: center;
        }
        .container {
            width: 80%;
            margin: 0 auto;
        }
        ul {
            list-style-type: none;
            padding: 0;
        }
        li {
            background: #fff;
            margin: 10px 0;
            padding: 15px;
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
            display: flex;
            justify-content: space-between;
        }
    </style>

        <h1>Liste des Contracteurs</h1>

    <div class="container">
        <ul>
            {{#each contractors}}
                <li>
                    <span>{{this.nom_compagnie}}</span>
                    <span>{{this.courriel}}</span>
                </li>
            {{/each}}
        </ul>
    </div>

